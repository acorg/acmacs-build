#! /bin/bash
AD_ROOT=$(/usr/bin/python -c "import os; print os.path.dirname(os.path.dirname(os.path.dirname(os.path.dirname(os.path.realpath(\"$0\")))))")
cd "${AD_ROOT}"/sources
for d in *; do
    if [[ -d "$d"/.git ]]; then
        echo '----------------------------------------------------------------------'
        echo $d
        cd $d
        git pull
        echo
        echo
        cd ..
    fi
done
