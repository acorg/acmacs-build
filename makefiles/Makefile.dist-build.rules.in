$(BUILD)/%.o: cc/%.cc | $(BUILD)
	@echo $(CXX_NAME) $(OPTIMIZATION) $<
	@$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	rm -rf $(DIST) $(BUILD) dist build

$(DIST):
	mkdir -p $(DIST)
	ln -sf $(DIST) dist

$(BUILD):
	mkdir -p $(BUILD)
	ln -sf $(BUILD) build

check-acmacsd-root:
ifndef ACMACSD_ROOT
	$(error ACMACSD_ROOT is not set)
endif

.PHONY: check-acmacsd-root

